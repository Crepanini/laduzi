<div class="banner"> Laduzi
  <p class="tagline"> Find the best clinic in two clicks</p>
</div>
<%= render 'shared/dropdown' %>
<div class="main">
  <div class="cards">
    <% @hospitals.each do |hospital| %>
      <!-- <div class="col-xs-12 col-sm-6 col-md-4"> -->
        <div class="card" >
          <%#= cl_image_tag hospital.image, class: "card-img" %>
          <div class="card-description">
            <%= image_tag hospital.image, class: "card-img" %>
            <p id="name"><%= hospital.name%></p>
            <div class="time-price">
              <div>
                <p><%= hospital.open_at.to_formatted_s(:time) %> - <%=hospital.close_at.to_formatted_s(:time) %></p>
              </div>
            </div>
            <p><%=hospital.address%></p>
            <%= link_to "", hospital_path(hospital), class: 'card-link' %>
          </div>
        </div>
      <!-- </div> -->
    <% end %>
  </div>
  <!-- map styling in _card.scss -->
  <div  class="card" id="map_index"
    data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</div>
