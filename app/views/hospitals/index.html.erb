
<div class="row">
  <% @hospitals.each do |hospital| %>
    <div class="col-xs-12 col-sm-6 col-md-4">
      <div class="card" >
        <%= image_tag hospital.image, class: "card-img" %>
        <div class="card-description">
          <p id="name"><%= hospital.name%></p>
          <div class="time-price">
            <div><p> Â¥<%=hospital.price%></p></div>
            <div><p><%= hospital.open_at.to_formatted_s(:time) %> - <%=hospital.close_at.to_formatted_s(:time) %></p></div>
          </div>
          <p><%=hospital.address%></p>
          <%= link_to "", hospital_path(hospital), class: 'card-link' %>
        </div>
      </div>
    </div>
  <% end %>
</div>






