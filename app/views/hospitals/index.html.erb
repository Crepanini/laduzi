<h1>Hospitals#index</h1>
<p>Find me in app/views/hospitals/index.html.erb</p>

<div class="row">
  <% @hospitals.each do |hospital| %>
    <div class="col-xs-12 col-sm-6 col-md-4">
      <div class="card" >
        <%= cl_image_tag hospital.image, class: "card-img" %>
        <div class="card-description">
          <p id="brand"><%= hospital.name%></p>
          <p><%=hospital.addressraill%></p>
          <p><%=hospital.price%></p>
          <p><%=hospital.open_at%> - <%=hospital.close_at%></p>
        </div>
      </div>
      <%= link_to "", hospital_path(hospital), class: 'card-link' %>
    </div>
  <% end %>
</div>






