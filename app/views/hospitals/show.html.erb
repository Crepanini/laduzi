<h1 class="name"><a class="clickable" href="<%= hospital_upsave_path(@hospital) %>"><i class="fas fa-heart <%= @saved ? 'red' : 'gray' %>"></i></a> <%= @hospital.name%> </h1>
<div class="container">
  <div class="row">
    <div class="hospital col-sm">
      <div class="description" >
        <div><%= cl_image_tag((@hospital.name.parameterize.underscore + ".jpg"), :class => "hospital-img")%>
        </div>
        <div class="rating-description"> <strong>Hospital rating: </strong> <% (@hospital.rating || 0).round(0).to_i.times do%>
            <i class="fas fa-star star"></i>
          <% end %>
        </div>
        <div class="tags">
          <% @hospital.tag_list.each do |tag| %>
            <%= link_to tag, hospitals_path(@hospital, tag: tag), class: "tag" %>
          <% end %>
        </div>
        <div class="card-description">
          <!--   <div>
            <div class="show-description"> -->
          <% unless @hospital.tel == "n/a" || @hospital.tel.nil? %>
            <p><strong>Phone:</strong></p>
            <p><%= @hospital.tel%></p>
            <br>
          <% end %>
          <p><strong>Address:      <%= render 'shared/modal' %></strong></p>
          <p><%= @hospital.address%></p>
          <br>
          <p><strong>Working Hours:</strong></p>
          <% if @hospital.weekday.include?("Monday" || "Tuesday" || "Wednesday" || "Thursday" || "Friday") %> <%= @hospital.weekday %>
          <% else %>
            <p class="time">Monday - Friday: <%= @hospital.weekday %></p>
          <% end %>
          <% if @hospital.weekend.include?("Saturday" || "Sunday") %> <%= @hospital.weekend %>
          <% else %>
            <p class="time">Saturday and Sunday: <%= @hospital.weekend %></p>
            <br>
          <% end %>
          <p><strong>Specialties:</strong></p>
          <p><%= @hospital.specialty%></p>
          <br>
          <% unless @hospital.foreign_lang == "" %>
            <p><strong>Foreign Language Service:</strong></p>
            <p><%= @hospital.foreign_lang%></p>
            <br>
          <% end %>
          <% unless @hospital.website == "" || @hospital.website.nil? %>
            <p><strong>Website:</strong></p>
            <a href="//<%= @hospital.website %>"><%= @hospital.website%></a><br>
          <% end %>
          <!--    </div>
          </div> -->
        </div>
      </div>
      <div class="review col-sm">
        <div class= "overflow">
          <h2 class="comment">Reviews</h2>
          <% @hospital.comments.each do |comment| %>
            User: <%= comment.user.first_name %>  <%= comment.user.last_name %>
            <!--         Title: <%= comment.title %> <br> -->
            <% (comment.avg_rating || 0).round(0).to_i.times do %>
              <i class="fas fa-star"></i>
            <% end %><br>
            Comment: <%= comment.comment %><br>
            <hr>
          <% end %>
        </div>
        <%= render 'comments/new' %>
      </div>
    </div>
  </div>
</div>
<!-- map -->
<div
  id="map"
  style="width: 100%;
  height: 600px;"
  data-markers="<%= @marker.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
></div>