<h1 class="name"><%= @hospital.name%></h1>
<div class="hospital">
  <div class="description" >
    <div><%= image_tag @hospital.image, height: 400, width: 400,class: "hospital-img" %></div>
    <div class="tags">
      <% @hospital.tag_list.each do |tag| %>
        <%= link_to tag, hospitals_path(@hospital, tag: tag), class: "tag" %>
      <% end %>
    </div>
    <div class="card-description hospital">
      <div>
        <div class="time-price">
          <div>
            <p>Working Hours</p>
            <p class="time"><%= @hospital.open_at.to_formatted_s(:time)%> - <%= @hospital.close_at.to_formatted_s(:time)%></p>
          </div>
        </div>
        <div class="address">
          <p class="time-price">Address</p>
          <p><%= @hospital.address%></p>
        </div>
      </div>
    </div>
  </div>
  <div class="review">
    <div class= "overflow">
      <h2 class="comment">Reviews</h2>
      <% @hospital.comments.each do |comment| %>
        Title: <%= comment.title %> <br>
        Ratings: <% (comment.avg_rating || 0).round(0).to_i.times do %>
          <i class="fas fa-star star"></i>
        <% end %><br>
        Comment: <%= comment.comment %><br>
        <hr>
      <% end %>
    </div>
    <%= render 'comments/new' %>
  </div>
</div>
<div
  id="map"
  style="width: 100%;
  height: 600px;"
  data-markers="<%= @marker.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
></div>