<h1 class="name"><%= @hospital.name%></h1>
<div class="hospital">
  <div class="description" >
    <div><%= image_tag @hospital.image, height: 400, width: 400,class: "hospital-img" %></div>
    <div class="tags">
      <% @hospital.tag_list.each do |tag| %>
        <%= link_to tag, hospitals_path(@hospital, tag: tag), class: "tag" %>
      <% end %>
    </div>
    <div class="hospital">
      <div class="card-description-show">
        <div class="telephone">
          <% unless @hospital.tel == "n/a" || @hospital.tel.nil? %>
            <p>Appointment Telephone</p>
            <p><%= @hospital.tel%></p>
          <% end %>
        </div>
        <div class="address">
          <p>Address</p>
          <p><%= @hospital.address%></p>
        </div>
        <div class="working-hours">
          <div>
            <p>Working Hours</p>
            <% if @hospital.weekday.include?("Monday" || "Tuesday" || "Wednesday" || "Thursday" || "Friday") %> <%= @hospital.weekday %>
            <% else %>
              <p class="time">Monday - Friday: <%= @hospital.weekday %></p>
            <% end %>
            <% if @hospital.weekend.include?("Saturday" || "Sunday") %> <%= @hospital.weekend %>
            <% else %>
              <p class="time">Saturday and Sunday: <%= @hospital.weekend %></p>
            <% end %>
          </div>
        </div>
        <div class="specialties">
          <p>Specialties</p>
          <p><%= @hospital.specialty%></p>
        </div>
        <div class="foreign-lang">
          <% unless @hospital.foreign_lang == "" %>
            <p>Foreign Language Service</p>
            <p><%= @hospital.foreign_lang%></p>
          <% end %>
        </div>
        <div class="website">
          <% unless @hospital.website == "" || @hospital.website.nil? %>
            <p>Website</p>
            <p><%= @hospital.website%></p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class="review">
    <div class= "overflow">
      <h2 class="comment">Reviews</h2>
      <% @hospital.comments.each do |comment| %>
        Title: <%= comment.title %><br>
        Comment: <%= comment.comment %><br>
        <hr>
      <% end %>
    </div>
    <%= render 'comments/new' %>
  </div>
</div>
<div
  id="map"
  style="width: 100%;
  height: 600px;"
  data-markers="<%= @marker.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
></div>