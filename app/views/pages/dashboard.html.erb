<div class="container">
  <h1 class="profile">Saved</h1>
  <hr class="dashboard-line">
  <div class="main">
    <div class="cards">
      <% @saves.each do |hospital| %>
        <!-- <div class="col-xs-12 col-sm-6 col-md-4"> -->
        <div class="card" >
          <%#= cl_image_tag hospital.image, class: "card-img" %>
          <div class="card-description">
            <%= cl_image_tag((hospital.name.parameterize.underscore + ".jpg"), :class => "card-img") %>
            <div> Rating: <% (hospital.rating || 0).round(0).to_i.times do%>
                <i class="fas fa-star star"></i>
              <% end %>
            </div>
            <p id="name"><%= hospital.name%></p>
            <hr>
            <div class="time-price">
              <div>
                <p id="index-district"><i class="fas fa-map-pin"></i> <%= hospital.district %></p>
              </div>
            </div>
            <hr>
            <div class="info-under-line">
              <p id="index-address"><%=hospital.address%></p>
              <p id="provider-type"><%= hospital.provider_type %></p>
            </div>
            <%= link_to "", hospital_path(hospital), class: 'card-link' %>
          </div>
        </div>
        <!-- </div> -->
      <% end %>
    </div>
  </div>
</div>